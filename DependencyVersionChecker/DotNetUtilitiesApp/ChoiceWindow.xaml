<Window x:Class="DotNetUtilitiesApp.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closing="Window_Closing"
        Title="{Binding Path=WindowTitle, FallbackValue=Selection, TargetNullValue=Selection}" SizeToContent="WidthAndHeight" Width="320" Height="240">
    <DockPanel>
        <DockPanel LastChildFill="False" DockPanel.Dock="Bottom" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <Button Margin="5" Padding="8,1" DockPanel.Dock="Right" Click="Cancel_Click">Cancel</Button>
            <Button Margin="5" Padding="8,1" DockPanel.Dock="Right" Click="OK_Click">OK</Button>
        </DockPanel>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="{Binding Path=Message, FallbackValue=Choose one:, TargetNullValue=Choose one:}" />
            <ListBox SelectionMode="Single" ItemsSource="{Binding Path=Selection}" SelectedItem="{Binding Path=Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
    </DockPanel>
</Window>
